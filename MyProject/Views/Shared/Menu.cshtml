@model IEnumerable<MyProject.Models.Product>

<div class="cafe" id="Menu">
    <br /> <br />
    <h1 style="margin-top: 20px; margin-left: 40px; font-size: 50px; font-weight: 200; color: #333;">
        <i>Menu</i>
    </h1>

    <!-- Tab 1 -->
    <div id="Grid1" class="tab-content active">
        <div class="grid-container">
            @foreach (var item in Model.Take(8)) // Display first 8 items for the first tab
            {
                <div class="grid-item">
                    <img src="~/images/@item.Image" alt="@item.ProductName" />
                    <h3>@item.ProductName</h3>
                    <p>@item.Description at just <b>Rs.@item.Price /-</b></p>
                    <button class="add-to-cart-btn">Add to Cart</button>
                </div>
            }
        </div>
    </div>

    <!-- Tab 2 -->
    <div id="Grid2" class="tab-content">
        <div class="grid-container">
            @foreach (var item in Model.Skip(8).Take(8)) // Display next 8 items for the second tab
            {
                <div class="grid-item">
                    <img src="~/images/@item.Image" alt="@item.ProductName" />
                    <h3>@item.ProductName</h3>
                    <p>@item.Description at just <b>Rs.@item.Price /-</b></p>
                    <button class="add-to-cart-btn">Add to Cart</button>
                </div>
            }
        </div>
    </div>

    <!-- Repeat the same for Grid3 and Grid4 -->
    <div id="Grid3" class="tab-content">
        <div class="grid-container">
            @foreach (var item in Model.Skip(16).Take(8)) // Display next set of items
            {
                <div class="grid-item">
                    <img src="~/images/@item.Image" alt="@item.ProductName" />
                    <h3>@item.ProductName</h3>
                    <p>@item.Description at just <b>Rs.@item.Price /-</b></p>
                    <button class="add-to-cart-btn">Add to Cart</button>
                </div>
            }
        </div>
    </div>

    <div id="Grid4" class="tab-content">
        <div class="grid-container">
            @foreach (var item in Model.Skip(24).Take(8)) // Display final set of items
            {
                <div class="grid-item">
                    <img src="~/images/@item.Image" alt="@item.ProductName" />
                    <h3>@item.ProductName</h3>
                    <p>@item.Description at just <b>Rs.@item.Price /-</b></p>
                    <button class="add-to-cart-btn">Add to Cart</button>
                </div>
            }
        </div>
    </div>

    <!-- Pagination buttons -->
    <div class="pagination">
        <button class="active" onclick="openPage(event, 'Grid1')">1</button>
        <button onclick="openPage(event, 'Grid2')">2</button>
        <button onclick="openPage(event, 'Grid3')">3</button>
        <button onclick="openPage(event, 'Grid4')">4</button>
    </div>
    <br />
    <br />
</div>
