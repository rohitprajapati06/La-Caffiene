@model MyProject.Models.UserRegistrationDto

<!-- FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<!-- Custom CSS -->
<link rel="stylesheet" href="~/css/register.css" />

<div class="main-container">
    <!-- Brand heading -->
    <div class="brand-heading">
        <h1>La Caffeine</h1>
    </div>

    <!-- Register container -->
    <div class="register-container">
        <div class="left-panel"></div>
        <div class="right-panel">
            <h2 style="font-family: 'Kaushan Script', cursive; font-size: 42px; text-align: center;margin-bottom:5px; color: #6F4E37; margin: 0;">
                Register
            </h2>
            @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <i class="fas fa-user-tag"></i>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <i class="fas fa-user-tag"></i>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <i class="fas fa-envelope"></i>
                    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <i class="fas fa-lock"></i>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" required />
                    <span class="text-danger">@ViewData["ConfirmPasswordError"]</span>
                </div>

                <button type="submit" class="btn btn-register">Register</button>
            }

            <div class="text-center mt-3">
                @Html.ActionLink("Already have an account? Login", "Login", "Auth", null, new { @class = "btn btn-link", style = "color: #6F4E37; text-decoration: none;" })
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
