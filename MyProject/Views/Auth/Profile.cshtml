@model MyProject.Models.User

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">User Profile</h2>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">@Model.FirstName @Model.LastName</h5>

                    <table class="table">
                        <tr>
                            <th>Username</th>
                            <td>@Model.Username</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.EmailId</td>
                        </tr>
                        <tr>
                            <th>Registered</th>
                            <td>@Model.TimeStamp.ToString("dd MMM yyyy")</td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="text-center mt-3">
                @using (Html.BeginForm("Logout", "Auth", FormMethod.Post))
                {
                    <input type="submit" value="Logout" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>