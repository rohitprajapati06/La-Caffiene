@model MyProject.Models.BookingDto

@{
    ViewData["Title"] = "Book a Table";
}
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@400;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/booking.css" />

<div class="booking-wrapper">
    <div class="booking-container">
        <h2 class="booking-title">Book a Table</h2>

        @using (Html.BeginForm("Create", "Booking", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "booking-text-danger" })

            <div class="booking-form-group">
                @Html.LabelFor(m => m.Name, new { @class = "booking-form-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "booking-form-control booking-placeholder", placeholder = "Enter your full name" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "booking-text-danger" })
            </div>

            <div class="booking-form-group">
                @Html.LabelFor(m => m.NoOfPerson, new { @class = "booking-form-label" })
                @Html.TextBoxFor(m => m.NoOfPerson, new { @class = "booking-form-control booking-placeholder", type = "number", placeholder = "e.g. 2, 4, 6" })
                @Html.ValidationMessageFor(m => m.NoOfPerson, "", new { @class = "booking-text-danger" })
            </div>

            <div class="booking-form-group">
                @Html.LabelFor(m => m.Phone, new { @class = "booking-form-label" })
                @Html.TextBoxFor(m => m.Phone, new { @class = "booking-form-control booking-placeholder", placeholder = "e.g. 0412345678" })
                @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "booking-text-danger" })
            </div>

            <div class="booking-form-group">
                @Html.LabelFor(m => m.Mail, new { @class = "booking-form-label" })
                @Html.TextBoxFor(m => m.Mail, new { @class = "booking-form-control booking-placeholder", type = "email", placeholder = "your.email@example.com" })
                @Html.ValidationMessageFor(m => m.Mail, "", new { @class = "booking-text-danger" })
            </div>

            <div class="booking-form-group">
                @Html.LabelFor(m => m.DateTime, new { @class = "booking-form-label" })
                @Html.TextBoxFor(m => m.DateTime, new
                    {
                        @class = "booking-form-control booking-datetime",
                        type = "datetime-local",
                        value = Model?.DateTime.ToString("yyyy-MM-ddTHH:mm") ?? ""
                    })
                @Html.ValidationMessageFor(m => m.DateTime, "", new { @class = "booking-text-danger" })
            </div>

            <div class="booking-form-group">
                @Html.LabelFor(m => m.Message, new { @class = "booking-form-label" })
                @Html.TextAreaFor(m => m.Message, 5, 40, new { @class = "booking-form-control booking-textarea booking-placeholder", placeholder = "Special requests, dietary requirements, etc." })
                @Html.ValidationMessageFor(m => m.Message, "", new { @class = "booking-text-danger" })
            </div>

            <button type="submit" class="booking-btn-primary">Reserve Table</button>
        }
    </div>
    

</div>